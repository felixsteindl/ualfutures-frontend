<script type="text/template" id="events-card-view">
	<article class="grid-item level-<%= level %>">
		<p class="card-category"><a href="#"><%= category %></a></p>

		<div class="card-title">
			<h3 class="title"><%= title %></h3>
			<% if (subtitle !== ""){
			%>
			<h4 class="subtitle"><%= subtitle %></h4>
			<%
			}
			%>
		</div>

		<p class="card-subtext"><%= date %> {{!-- <%= time %><br><%= location %> --}}</p>
	</article>
</script>

<script type="text/template" id="events-single-view">
	<article>
		<h1><%= title %></h1>

		<div class="media-content">
		<%= content %>
		</div>
	</article>

	<div class="sidebar">
		<div class="info">
			<p>
				<%= date %><br>
				<%= time %>
			</p>
			<p>
				<%= address %>
			</p>
		</div>

		<div class="social-media">

		</div>

		<div class="upcoming">

		</div>
	</div>
</script>